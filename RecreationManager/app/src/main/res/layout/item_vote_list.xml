<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
				name="itemVoteList"
				type="com.example.recreationmanager.VoteData" />
	</data>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:background="@drawable/round_rectangle_13"
			android:padding="10dp">

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:padding="10dp">

			<TextView
					android:id="@+id/vote_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					tools:text="여기에 투표 이름 나옴."
					android:text="@{itemVoteList.voteTitle}"
					android:textColor="@color/white"
					android:textSize="20sp" />

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

				<TextView
						android:id="@+id/vote_priority"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center"
						tools:text="중요도"
						android:text="@{itemVoteList.priority}"
						android:textColor="@color/white"
						android:textSize="15sp" />

				<View
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1" />

				<TextView
						android:id="@+id/vote_start_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						tools:text="시작시간/일"
						android:text="@{itemVoteList.startTime}"
						android:textColor="@color/white"
						android:textSize="15sp" />

				<TextView
						android:id="@+id/vote_fromto_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1.2"
						android:gravity="center"
						android:text="~"
						android:textColor="@color/white"
						android:textSize="15sp" />

				<TextView
						android:id="@+id/vote_end_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						tools:text="종료시간/일"
						android:text="@{itemVoteList.endTime}"
						android:textColor="@color/white"
						android:textSize="15sp" />
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>
</layout>