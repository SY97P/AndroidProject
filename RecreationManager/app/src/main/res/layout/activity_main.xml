<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <data>
        <variable
            name="mainActivity"
            type="com.example.recreationmanager.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/level_1">

        <CalendarView
            android:id="@+id/main_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_rectangle_13"
            android:theme="@style/CalendarViewCustom"
            android:dateTextAppearance="@style/CaledarViewDateCustomText"
            android:weekDayTextAppearance="@style/CalendarViewWeekCustomText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_game_list"
            android:splitMotionEvents="false"
            android:background="@drawable/round_rectangle_14"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</layout>