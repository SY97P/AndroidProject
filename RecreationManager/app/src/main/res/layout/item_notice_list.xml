<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemNoticeList"
            type="com.example.recreationmanager.notice.NoticeData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_rectangle_13"
        android:padding="10dp">

        <TextView
            android:id="@+id/notice_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="italic" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#c2c2c2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="공지제목 여기"
                android:text="@{itemNoticeList.noticeTitle}"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/notice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="날짜 여기"
                android:text="@{itemNoticeList.noticeDate}"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</layout>